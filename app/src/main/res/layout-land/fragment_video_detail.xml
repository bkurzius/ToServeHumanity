<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center_vertical"
    tools:context="com.bahaiexplorer.toservehumanity.activities.VideoDetailActivity$PlaceholderFragment">

    <FrameLayout
        android:id="@+id/vg_icon_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        >
    <ImageView
        android:id="@+id/iv_video_icon"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_gravity="center"

        />
    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/play_btn_size"
        android:layout_height="@dimen/play_btn_size"
        android:src="@drawable/btn_play"
        android:layout_gravity="center"
        />
    </FrameLayout>
    <TextView
        android:id="@+id/tv_video_title"
        android:text="title"
        android:layout_toRightOf="@id/vg_icon_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/detail_title_height"/>
    <LinearLayout
        android:id="@+id/length_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_video_title"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/vg_icon_holder"
>
        <TextView
        android:id="@+id/tv_video_length"
        android:text="00:10:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/tv_pipe"
        android:text=" | "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
         />
    <TextView
        android:id="@+id/tv_video_size"
        android:text="30 MB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"

 />

    </LinearLayout>
    <Button
        android:id="@+id/btn_facebutton"
        android:text="@string/title_facebook_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/vg_icon_holder"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/vg_icon_holder"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
</ScrollView>